<div class="container">

      <div class="profile-info">
        <h1>Mon profil</h1>
        <div class ="icone-profile">
          <span class="iconify" data-icon="carbon:user-avatar"></span>
        </div>
        <%# <h2>Edit <%= resource_name.to_s.humanize %></h2>
        <%= @user.first_name %>
        <%= @user.last_name %>
      </div>

      <div class="profile-redirect-info">
        <div class="btn btn-bank-info">
          <a href="#">Modifier mes donn√©es bancaires</a>
          <span class="iconify" data-icon="dashicons:arrow-right-alt2"></span>
        </div>
        <div class="btn btn-bank-info">
          <a href="#">Informations personnelles</a>
          <span class="iconify" data-icon="dashicons:arrow-right-alt2"></span>
        </div>
      </div>


      <div class="password-update">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>


              <div class="form-inputs">

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Veuillez confirmer : <%= resource.unconfirmed_email %></p>
                <% end %>

                  <%= f.input :new_password,
                              label: "Nouveau mot de passe",
                              required: false,
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :password_confirmation,
                              label: "Confirmation mot de passe",
                              required: false,
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :current_password,
                              label: "Mot de passe actuelle",
                              hint: "Pour confirmer, renseignez votre ancien mdp",
                              required: true,
                              input_html: { autocomplete: "current-password" } %>

              </div>
              <div class="form-actions">
                <%= f.button :submit, "Valider", class:"green-btn"%>
              </div>
          <% end %>
      </div>
</div>

<br>
<br>
<br>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
