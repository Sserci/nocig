  <div class="header-dashboard">
    <div class="header-dashboard-info">
      <h2> <%= current_user.first_name %></h2>
      <%= link_to ('<span class="iconify" data-icon="carbon:user-avatar"></span>').html_safe, profile_home_path, class: 'text-decoration-none' %>
      <p><%=@time.strftime("%d/%m/%Y") %></p>
      <%# <%= @time.strftime("%d of %B, %Y") %>
      <p><strong>Bravo !</strong> plus que <strong id="day">39</strong> jours avant votre <strong><%= current_user.objective_title %></strong> </p>
    </div>
  </div>

  <div class="card-recap">
    <h2>Objectif</h2>
    <p id="days-left">J-39</p>

    <div class="pot-growth">

      <div class="actual">
        <p id="actual-pot"><%= current_user.pot %>€</p>
        <p>dans ma cagnotte</p>
      </div>

      <div class="progression">
        <progress id="progress-bar" value="<%= current_user.pot %>" max="<%= current_user.objective_amount %>"></progress>
      </div>

      <div class="final">
        <p id="final-pot"><%= current_user.objective_amount %>€</p>
        <p>montant final</p>
      </div>
    </div>
  </div>

  <div class="cards">
    <div class="card-dashboard">
      <div class="icon-bg">
        <span class="iconify" data-icon="arcticons:money-manager"></span>
      </div>
      <p> <%= link_to "Ma cagnotte", dashboard_pot_path, class: "text-decoration-none"%></p>
    </div>

    <div class="card-dashboard">
      <div class="icon-bg">
      <span class="iconify" data-icon="ph:heart-thin"></span>
      </div>
      <p><%= link_to "Suivi santé", dashboard_health_path, class: "text-decoration-none"%></p>
    </div>

    <div class="card-dashboard">
      <div class="icon-bg">
        <span class="iconify" id="muscle" data-icon="emojione-monotone:flexed-biceps"></span>
      </div>
      <p><%= link_to "Motivation", dashboard_motivation_path, class: "text-decoration-none"%></p>
    </div>

    <div class="card-dashboard">
      <div class="icon-bg">
        <span class="iconify" data-icon="iwwa:consumption-o"></span>
      </div>
      <p><%= link_to "Renseigner ma conso", dashboard_new_consumption_path, class: "text-decoration-none"%></p>
    </div>
  </div>
